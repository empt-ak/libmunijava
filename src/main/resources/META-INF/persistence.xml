<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/
persistence http://java.sun.com/xml/ns/persistence/
persistence_1_0.xsd">
    <persistence-unit name="library" transaction-type="RESOURCE_LOCAL">
        <class>library.entity.Book</class>
        <class>library.entity.Ticket</class>
        <class>library.entity.TicketItem</class>
        <class>library.entity.User</class>
